<!-- Paging -->

$('#pagination_keyboard').twbsPagination({
    totalPages: <%= totalPage_Keyboard %>,
    visiblePages: 3,
    first:'&laquo;',
    prev: '&lt;',
    next: '&gt;',
    last: '&raquo;',
    hrefVariable: '{{pageNumber}}',
    onPageClick: function (event, page) {
      $.get(`/paging_homepage_keyboard/${page}`, data => {
        $('#show_keyboard').hide().html(data).fadeIn(2500);
      });
    }
});

